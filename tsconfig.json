{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "outDir": "./lib",
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "removeComments": true,
        "esModuleInterop": true
    },
    "include": [
        "src",
        "thirdparty"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}